{% extends "base.twig" %}{% block content %}<!--* HERO SECTION
--><section id="hero"><div class="hero-container"><div class="tagline-container"><h1>{{post.title}}</h1><p>{{post.slogan}}</p><a href="https://www.canva.com/"><div class="button"><span>Start Designing</span></div></a></div></div></section><!--* FEATURES SECTION
--><section id="features"><div class="features-container"><div class="features-title"><h2>Key Features</h2></div><div class="float-container"><div class="features-list">{% for item in post.get_field('product_features') |slice(0,3) %}<div class="feature"><img src="{{TimberImage (item.icon)}}" /><p>{{item.feature}}</p></div>{% endfor %}</div><div class="features-list-2">{% for item in post.get_field('product_features') |slice(3,5) %}<div class="feature"><img src="{{TimberImage (item.icon)}}" /><p>{{item.feature}}</p></div>{% endfor %}</div></div></div></section><!--* FAQ's SECTION
--><section id="faqs"><div class="faqs-container"><h2 class="faq">FAQ'S</h2><br /><div class="faq-single">{% for item in post.get_field('faqs') |slice(0,2) %}<h2>{{item.question}}</h2><p>{{item.answer}}</p>{% endfor %}</div><div id="accordion"><h3>View More</h3><div class="more">{% for item in post.get_field('faqs') |slice(2) %}<h2>{{item.question}}</h2><p>{{item.answer}}</p>{% endfor %}</div></div></div></section><!--* PRODUCT SECTION
--><section id="products"><div class="product-container"><div class="product-title"><h2>Take a Look at our templates</h2><p>Here are some of our classic designs, merely a sample of what we offer. Behind the scenes our team continues to add to the thousands of custom designs.</p></div><div class="column-container"><div class="column-left"><div class="product-1">{% for item in post.get_field('templates') |slice(0,3) %}<div class="product"><a href="https://www.canva.com/"><img src="{{TimberImage(item.image)|resize(350,225)}}" /></a><p>{{item.title}}</p></div>{% endfor %}</div></div><div class="column-right"><div class="product-2">{% for item in post.get_field('templates') |slice(3,3,4) %}<div class="product"><a href="https://www.canva.com/"><img src="{{TimberImage(item.image)|resize(350,225)}}" /></a><p>{{item.title}}</p></div>{% endfor %}</div></div><div class="column-center"><div class="product-3">{% for item in post.get_field('templates') |slice(6,9) %}<div class="product"><a href="https://www.canva.com/"><img src="{{TimberImage(item.image)|resize(350,225)}}" /></a><p>{{item.title}}</p></div>{% endfor %}</div></div></div></div></section><!--* TESTIMONIALS SECTION
--><section class="wow bounceInUp" id="testimonials"><div class="testimonials-container"><div class="testimonial-title"><h2 class="faq">Testimonials</h2></div><div class="testimonial-blocks">{% for item in post.get_field('testimonials') %}<div class="testimonial"><a href="{{item.link}}" target="_blank"><img src="{{TimberImage (item.image)}}" /><p>{{item.text}}</p></a></div>{% endfor %}</div></div><a href="https://www.canva.com/"><div class="button"><span>Start Designing</span></div></a></section>{% endblock %}